<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@color/blue001"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:layout_width="55dp"
            android:src="@drawable/ic_m000_menu"
            android:layout_height="55dp"
            android:padding="5dp"
            android:id="@+id/bt_m000_menu"
            app:tint="@color/black" />

        <TextView android:layout_height="match_parent"
            android:text="Truyện lày không mắc cười?"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tv_m000_topic"
            android:gravity="center"
            android:layout_width="305dp"/>
        <TextView android:layout_width="match_parent"
            android:text="18/23"
            android:gravity="center_vertical|end"
            android:padding="5dp"
            android:visibility="invisible"
            android:textSize="15dp"
            android:textColor="@color/teal_700"
            android:id="@+id/tv_m000_countStories"
            android:layout_height="match_parent"/>

    </TableRow>

</LinearLayout>